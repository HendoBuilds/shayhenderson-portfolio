{
  "name": "shayhenderson-portfolio",
  "type": "module",
  "version": "1.0.0",
  "description": "Modern portfolio website for Shay Henderson - Software and Infrastructure Engineer",
  "author": "Shay Henderson <contact@shayhenderson.dev>",
  "homepage": "https://www.shayhenderson.dev",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . && astro check",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .astro",
    "analyze": "pnpm dlx @astrojs/check",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^9.0.2",
    "@iconify-json/mdi": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.15.9",
    "astro-icon": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-activity-calendar": "^2.7.15",
    "react-dom": "^19.1.0",
    "react-tooltip": "^5.30.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "sharp": "^0.34.5",
    "terser": "^5.43.1",
    "typescript-eslint": "^8.48.1"
  }
}
