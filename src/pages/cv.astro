---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import CheckListItem from '../components/CheckListItem.astro';

const title = 'Shay Henderson - CV | Software & Infrastructure Engineer';
const description =
  'Full professional CV and work history. 6+ years in full-stack development, cloud infrastructure, QA automation, DevOps, and technical support operations.';
---

<Layout title={title} description={description}>
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: 'https://www.shayhenderson.dev',
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'CV',
          item: 'https://www.shayhenderson.dev/cv',
        },
      ],
    })}
  />

  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Person',
      name: 'Shay Henderson',
      jobTitle: 'Software and Infrastructure Engineer',
      email: 'contact@shayhenderson.dev',
      url: 'https://www.shayhenderson.dev',
      sameAs: [
        'https://github.com/HendoBuilds',
        'https://www.linkedin.com/in/shay-henderson/',
      ],
      address: {
        '@type': 'PostalAddress',
        addressCountry: 'GB',
        addressRegion: 'Scotland',
      },
      hasOccupation: [
        {
          '@type': 'Occupation',
          name: 'Software Engineer',
          occupationLocation: {
            '@type': 'Place',
            address: {
              '@type': 'PostalAddress',
              addressCountry: 'GB',
              addressRegion: 'Scotland',
            },
          },
          skills:
            'React, Next.js, TypeScript, JavaScript, Astro, Full-Stack Development',
          description:
            'Building scalable web and mobile applications with modern frameworks',
        },
        {
          '@type': 'Occupation',
          name: 'Infrastructure Engineer',
          occupationLocation: {
            '@type': 'Place',
            address: {
              '@type': 'PostalAddress',
              addressCountry: 'GB',
              addressRegion: 'Scotland',
            },
          },
          skills:
            'Google Cloud Platform, Cloudflare, Azure, Vercel, DevOps, Site Reliability Engineering',
          description:
            'Managing cloud infrastructure and ensuring system reliability',
        },
        {
          '@type': 'Occupation',
          name: 'QA Engineer',
          occupationLocation: {
            '@type': 'Place',
            address: {
              '@type': 'PostalAddress',
              addressCountry: 'GB',
              addressRegion: 'Scotland',
            },
          },
          skills:
            'Quality Assurance, Test Automation, Technical Documentation, Support Engineering',
          description:
            'Ensuring software quality through testing and documentation',
        },
      ],
    })}
  />

  <div class="container mx-auto max-w-4xl px-6 py-8">
    <div class="mb-12 text-center">
      <h1 class="mb-4 text-4xl font-bold text-foreground">Shay Henderson</h1>
      <p class="mb-2 text-lg text-muted-foreground md:text-xl">
        Software and Infrastructure Engineer
      </p>
      <p class="mb-4 text-sm text-muted-foreground md:text-base">
        Cloud Systems • QA & Reliability • Full-Stack Development
      </p>
      <div
        class="flex flex-wrap justify-center gap-3 text-xs text-muted-foreground md:gap-4 md:text-sm"
      >
        <a
          href="mailto:contact@shayhenderson.dev"
          class="flex min-h-[44px] items-center gap-1 px-2 transition-colors hover:text-primary"
          rel="noopener noreferrer"
        >
          <Icon
            name="mdi:email"
            class="flex-shrink-0 text-lg"
            aria-hidden="true"
          />
          <span class="break-all">contact@shayhenderson.dev</span>
        </a>
        <a
          href="https://www.linkedin.com/in/shay-henderson/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex min-h-[44px] items-center gap-1 px-2 transition-colors hover:text-primary"
        >
          <Icon
            name="mdi:linkedin"
            class="flex-shrink-0 text-lg"
            aria-hidden="true"
          />
          LinkedIn
        </a>
        <a
          href="https://github.com/HendoBuilds"
          target="_blank"
          rel="noopener noreferrer"
          class="flex min-h-[44px] items-center gap-1 px-2 transition-colors hover:text-primary"
        >
          <Icon
            name="mdi:github"
            class="flex-shrink-0 text-lg"
            aria-hidden="true"
          />
          GitHub
        </a>
      </div>
    </div>

    <section class="mb-8">
      <h2 class="mb-4 border-b pb-2 text-2xl font-semibold text-foreground">
        Professional Summary
      </h2>
      <p class="leading-relaxed text-muted-foreground">
        Versatile Software and Infrastructure Engineer with more than six years
        of experience across software development, cloud infrastructure, QA, and
        technical support. Proven record of implementing scalable web and mobile
        solutions, maintaining near-perfect uptime, and improving customer
        experience through structured processes and data-driven problem solving.
        Skilled at bridging technical, operational, and customer-facing domains
        to deliver reliable, high-quality outcomes across multiple platforms and
        operating systems.
      </p>
    </section>

    <section class="mb-8">
      <h2 class="mb-4 border-b pb-2 text-2xl font-semibold text-foreground">
        Technical Skills
      </h2>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        <div>
          <h3 class="mb-3 text-lg font-medium text-foreground">
            Languages & Frameworks
          </h3>
          <ul class="space-y-2 text-muted-foreground">
            <CheckListItem>JavaScript / TypeScript</CheckListItem>
            <CheckListItem>HTML / CSS</CheckListItem>
            <CheckListItem>React</CheckListItem>
            <CheckListItem>Next.js</CheckListItem>
            <CheckListItem>Astro</CheckListItem>
          </ul>
        </div>
        <div>
          <h3 class="mb-3 text-lg font-medium text-foreground">
            Cloud & Infrastructure
          </h3>
          <ul class="space-y-2 text-muted-foreground">
            <CheckListItem>Google Cloud Platform (GCP)</CheckListItem>
            <CheckListItem>Cloudflare</CheckListItem>
            <CheckListItem>Microsoft Azure</CheckListItem>
          </ul>
          <h3 class="mb-3 mt-4 text-lg font-medium text-foreground">
            Virtualisation & Backup
          </h3>
          <ul class="space-y-2 text-muted-foreground">
            <CheckListItem>Hyper-V</CheckListItem>
            <CheckListItem>Veeam</CheckListItem>
          </ul>
        </div>
        <div>
          <h3 class="mb-3 text-lg font-medium text-foreground">
            Systems & Tools
          </h3>
          <ul class="space-y-2 text-muted-foreground">
            <CheckListItem>Windows Server / Linux (Ubuntu)</CheckListItem>
            <CheckListItem>Active Directory</CheckListItem>
            <CheckListItem>Microsoft 365 / Exchange</CheckListItem>
            <CheckListItem>PowerShell / Bash</CheckListItem>
            <CheckListItem>Git / GitHub</CheckListItem>
            <CheckListItem>Intercom / Linear</CheckListItem>
          </ul>
        </div>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="mb-4 border-b pb-2 text-2xl font-semibold text-foreground">
        Professional Experience
      </h2>
      <div class="space-y-6">
        <div class="border-l-4 border-primary pl-6">
          <h3 class="text-lg font-medium text-foreground">
            QA and Support Engineer
          </h3>
          <p class="mb-2 text-muted-foreground">
            JPG Store • Sep 2022 – Present | Remote, Scotland, UK
          </p>
          <ul class="ml-4 list-disc space-y-1 text-muted-foreground">
            <li>
              Led the migration from a bespoke ticketing system to a fully
              integrated Intercom platform with an AI-powered chatbot that
              achieved a 64.6% deflection rate
            </li>
            <li>
              Authored and maintained more than 150 technical and support
              articles, reaching over 60,000 unique readers annually
            </li>
            <li>
              Implemented company-wide QA standards to enable early detection of
              technical and user-facing issues
            </li>
            <li>
              Maintained and developed the Next.js frontend repository for both
              the web and mobile applications
            </li>
            <li>
              Improved customer satisfaction to 90.2% with human agents and
              74.3% with AI agents on first contact
            </li>
            <li>
              Oversaw infrastructure reliability on Google Cloud Platform and
              Cloudflare, maintaining 99% uptime with under two-minute average
              first-response time
            </li>
            <li>
              Supported the platform and team through multiple scaling phases
              while maintaining service quality and operational performance
            </li>
          </ul>
        </div>
        <div class="border-l-4 border-accent pl-6">
          <h3 class="text-lg font-medium text-foreground">
            Technical Writer & QA Contractor
          </h3>
          <p class="mb-2 text-muted-foreground">
            SecurityBot • Apr 2025 – Aug 2025 | Remote
          </p>
          <ul class="ml-4 list-disc space-y-1 text-muted-foreground">
            <li>
              Contracted to lead a full professional rework of the SecurityBot
              GitBook documentation, transforming it from a hobbyist reference
              into a structured, production-ready knowledge base for users and
              administrators
            </li>
            <li>
              Redesigned content architecture, rewrote all technical
              documentation, implemented consistent formatting and tone, and
              ensured complete product coverage
            </li>
            <li>
              Performed QA and support testing to validate new product features
              and confirm accuracy of documentation prior to release
            </li>
            <li>
              Engagement lasted approximately five months and concluded
              successfully after all deliverables were completed to satisfaction
            </li>
          </ul>
        </div>
        <div class="border-l-4 border-accent pl-6">
          <h3 class="text-lg font-medium text-foreground">
            IT Support Analyst
          </h3>
          <p class="mb-2 text-muted-foreground">
            MacDIT • Jun 2019 - Apr 2024 | Scotland, UK
          </p>
          <ul class="ml-4 list-disc space-y-1 text-muted-foreground">
            <li>
              Provided tier-1 to tier-3 technical support for Windows Server,
              Active Directory, Microsoft 365, Azure, Exchange, and SharePoint
              environments
            </li>
            <li>
              Assisted with server deployments, migrations, and virtualisation
              projects using Hyper-V
            </li>
            <li>
              Implemented Veeam backup and disaster recovery solutions to
              maintain data integrity and business continuity
            </li>
            <li>
              Used PowerShell for system administration, diagnostics, and
              maintenance tasks
            </li>
            <li>
              Collaborated with clients and internal staff to meet SLA targets
              and maintain high-quality service delivery
            </li>
          </ul>
        </div>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="mb-4 border-b pb-2 text-2xl font-semibold text-foreground">
        Key Projects
      </h2>
      <div class="space-y-4">
        <div class="rounded-lg border bg-card p-4">
          <h3 class="mb-2 text-lg font-medium text-foreground">
            JPG Store Help Center
          </h3>
          <p class="mb-2 text-muted-foreground">
            Intercom • Technical Documentation • Nov 2024 – Present
          </p>
          <p class="text-muted-foreground">
            Led the creation and ongoing development of the JPG Store Help
            Center, authoring and maintaining more than 150 technical and
            support articles across product documentation, wallet integration,
            and lending. The Help Center reached over 60,000 unique readers each
            year. Integrated Intercom for AI-assisted support and automated
            workflows that improved customer satisfaction and reduced response
            times.
          </p>
        </div>
        <div class="rounded-lg border bg-card p-4">
          <h3 class="mb-2 text-lg font-medium text-foreground">
            SecurityBot Knowledge Hub
          </h3>
          <p class="mb-2 text-muted-foreground">
            GitBook • Technical Writing • Apr 2025 – Aug 2025
          </p>
          <p class="text-muted-foreground">
            Professional rework of SecurityBot's documentation, transforming it
            from a hobbyist reference into a structured, production-ready
            knowledge base. Redesigned content architecture and rewrote all
            technical documentation with consistent formatting and comprehensive
            product coverage.
          </p>
        </div>
      </div>
    </section>

    <section class="mb-8">
      <h2 class="mb-4 border-b pb-2 text-2xl font-semibold text-foreground">
        Education & Certifications
      </h2>
      <div class="space-y-4">
        <div>
          <h3 class="text-lg font-medium text-foreground">
            Higher National Certificate (HNC) in Computer Science
          </h3>
          <p class="text-muted-foreground">
            West Lothian College • 2018 - 2019
          </p>
          <p class="text-muted-foreground">
            Covered programming, networking, troubleshooting, operating systems,
            and IT management fundamentals.
          </p>
        </div>
        <div>
          <h3 class="text-lg font-medium text-foreground">
            Diploma in Information Technology & Telecommunications (SCQF Level
            8)
          </h3>
          <p class="text-muted-foreground">QA Apprenticeships • 2020 - 2021</p>
          <p class="text-muted-foreground">
            Hands-on training in IT support, Active Directory, network
            operations, and system troubleshooting.
          </p>
        </div>
        <div>
          <h3 class="text-lg font-medium text-foreground">
            Diploma in Information Security (SCQF Level 8)
          </h3>
          <p class="text-muted-foreground">QA Apprenticeships • 2022 - 2023</p>
          <p class="text-muted-foreground">
            Focused on information security practices, infrastructure
            management, and secure system design.
          </p>
        </div>
      </div>
      <div class="mt-8">
        <h3 class="mb-4 text-xl font-medium text-foreground">Certifications</h3>
        <div class="space-y-3">
          <div class="rounded-lg border bg-card p-4">
            <h4 class="text-md font-medium text-foreground">
              GitHub Administration
            </h4>
            <p class="text-sm text-muted-foreground">
              Microsoft • Issued Sep 2025, Expires Oct 2027
            </p>
            <a
              href="https://learn.microsoft.com/en-us/users/shayhendo/credentials/2931c284c3de4c9f"
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs text-primary hover:underline">View Credential</a
            >
          </div>
          <div class="rounded-lg border bg-card p-4">
            <h4 class="text-md font-medium text-foreground">
              GitHub Foundations
            </h4>
            <p class="text-sm text-muted-foreground">
              GitHub • Issued Mar 2025, Expires Mar 2028
            </p>
            <a
              href="https://www.credly.com/badges/e97e7c77-e341-4847-b43b-605710527682/linked_in_profile"
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs text-primary hover:underline">View Credential</a
            >
          </div>
        </div>
      </div>
    </section>

    <section class="mt-12 border-t border-border pt-8 text-center">
      <a
        href="/Shay-Henderson-CV.pdf"
        download
        class="inline-flex items-center gap-2 rounded-lg bg-primary px-6 py-3 font-medium text-primary-foreground transition-colors hover:bg-primary/90"
      >
        <Icon name="mdi:download" class="text-lg" />
        Download PDF Version
      </a>
    </section>
  </div>
</Layout>
