---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { Button } from '@/components/ui/button';

const title = "Projects | Shay Henderson";
const description = "Explore web development projects: help center platforms reaching 60k+ users, technical documentation systems, and sites built with React and TypeScript.";

const projects = [
  {
    title: "JPG Store Help Center",
    description: "Led creation and ongoing development of comprehensive help center with 150+ technical articles reaching 60,000+ readers annually. Integrated Intercom for AI-assisted support achieving 64.6% deflection rate and 90.2% customer satisfaction.",
    tech: ["Intercom", "Technical Writing", "AI Automation", "Customer Support", "Knowledge Management"],
    github: null,
    live: "https://help.jpg.store",
    category: "Documentation",
    featured: true
  },
  {
    title: "SecurityBot Knowledge Hub",
    description: "Professional rework of SecurityBot's GitBook documentation, transforming it from a hobbyist reference into a structured, production-ready knowledge base with comprehensive product coverage.",
    tech: ["GitBook", "Technical Writing", "Documentation", "QA Testing"],
    github: null,
    live: "https://securitybot.gitbook.io/securitybot-knowledge-hub/",
    category: "Documentation",
    featured: true
  },
  {
    title: "Portfolio Website",
    description: "Modern, responsive portfolio built with Astro and Tailwind CSS. Features dark mode, smooth animations, and optimized performance.",
    tech: ["Astro", "TypeScript", "Tailwind CSS", "Vercel"],
    github: null,
    live: "https://www.shayhenderson.dev",
    category: "Frontend",
    featured: true
  }
];

const categories = [...new Set(projects.map(project => project.category))];
---

<Layout title={title} description={description}>
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://www.shayhenderson.dev"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Projects",
        "item": "https://www.shayhenderson.dev/projects"
      }
    ]
  })} />

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Shay Henderson's Project Portfolio",
    "description": "Collection of web development and technical documentation projects",
    "numberOfItems": projects.length,
    "itemListElement": projects.map((project, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "CreativeWork",
        "name": project.title,
        "description": project.description,
        "author": {
          "@type": "Person",
          "name": "Shay Henderson",
          "url": "https://www.shayhenderson.dev"
        },
        "url": project.live,
        "keywords": project.tech.join(", "),
        "genre": project.category,
        "isAccessibleForFree": true,
        ...(project.github && { "codeRepository": project.github })
      }
    }))
  })} />

  <div class="container mx-auto px-6 py-8 max-w-6xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-foreground mb-4">Projects Portfolio</h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        A collection of web development projects showcasing various technologies,
        from full-stack applications to automation tools and system utilities.
      </p>
    </div>

    <section class="mb-16">
      <h2 class="text-2xl font-semibold text-foreground mb-8 border-b pb-2">
        Featured Projects
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
        {projects.filter(p => p.featured).map((project) => (
          <div class="bg-card rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border">
            <div class="h-48 bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
              <Icon name="mdi:code-braces" class="text-6xl text-primary-foreground opacity-80" />
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-2xl font-semibold text-foreground">{project.title}</h3>
                <span class="px-3 py-1 bg-primary/10 text-primary text-sm rounded-full">
                  {project.category}
                </span>
              </div>
              <p class="text-muted-foreground mb-4 leading-relaxed">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tech.map((tech) => (
                  <span class="px-2 py-1 bg-muted text-muted-foreground text-xs rounded">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex gap-3">
                {project.live && (
                  <Button asChild>
                    <a href={project.live} target="_blank" rel="noopener noreferrer">
                      <Icon name="mdi:open-in-new" class="text-lg mr-2" />
                      Live Demo
                    </a>
                  </Button>
                )}
                {project.github && (
                  <Button variant="secondary" asChild>
                    <a href={project.github} target="_blank" rel="noopener noreferrer">
                      <Icon name="mdi:github" class="text-lg mr-2" />
                      GitHub
                    </a>
                  </Button>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section>
      <h2 class="text-2xl font-semibold text-foreground mb-8 border-b pb-2">
        All Projects
      </h2>

      <div class="flex flex-wrap gap-3 mb-8">
        <Button className="category-filter" data-category="all" variant="default">All Categories</Button>
        {categories.map((category) => (
          <Button className="category-filter" data-category={category.toLowerCase()} variant="secondary">{category}</Button>
        ))}
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="projects-grid">
        {projects.map((project) => (
          <div class="project-card bg-card rounded-lg shadow-md hover:shadow-lg transition-all duration-300 border overflow-hidden" data-category={project.category.toLowerCase()}>
            <div class="h-32 bg-gradient-to-br from-gray-400 to-gray-600 flex items-center justify-center">
              <Icon name="mdi:code-braces" class="text-4xl text-primary-foreground opacity-80" />
            </div>
            <div class="p-4">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-lg font-semibold text-foreground">{project.title}</h3>
                <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded">
                  {project.category}
                </span>
              </div>
              <p class="text-muted-foreground text-sm mb-3">{project.description}</p>
              <div class="flex flex-wrap gap-1 mb-3">
                {project.tech.slice(0, 3).map((tech) => (
                  <span class="px-2 py-1 bg-muted text-muted-foreground text-xs rounded">
                    {tech}
                  </span>
                ))}
                {project.tech.length > 3 && (
                  <span class="px-2 py-1 bg-muted text-muted-foreground text-xs rounded">
                    +{project.tech.length - 3} more
                  </span>
                )}
              </div>
              <div class="flex gap-2">
                {project.live && (
                   <Button asChild size="sm" className="h-8">
                    <a href={project.live} target="_blank" rel="noopener noreferrer">
                      <Icon name="mdi:open-in-new" class="text-sm mr-1" />
                      Demo
                    </a>
                  </Button>
                )}
                {project.github && (
                  <Button variant="secondary" asChild size="sm" className="h-8">
                    <a href={project.github} target="_blank" rel="noopener noreferrer">
                      <Icon name="mdi:github" class="text-sm mr-1" />
                      Code
                    </a>
                  </Button>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="mt-16 p-8 bg-muted/50 rounded-xl">
      <h2 class="text-2xl font-semibold text-foreground mb-6 text-center">Technologies & Skills</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        <div class="text-center">
          <h3 class="font-medium text-foreground mb-2">Frontend</h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded">React</span>
            <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded">Next.js</span>
            <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded">Astro</span>
            <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded">TypeScript</span>
          </div>
        </div>
        <div class="text-center">
          <h3 class="font-medium text-foreground mb-2">Cloud & Infrastructure</h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">GCP</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Cloudflare</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Azure</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Vercel</span>
          </div>
        </div>
        <div class="text-center">
          <h3 class="font-medium text-foreground mb-2">Tools & Platforms</h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Git/GitHub</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Intercom</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Linear</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">GitBook</span>
          </div>
        </div>
        <div class="text-center">
          <h3 class="font-medium text-foreground mb-2">Scripting & Automation</h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">PowerShell</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Bash</span>
            <span class="px-2 py-1 bg-accent text-accent-foreground text-xs rounded">Node.js</span>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const filterButtons = document.querySelectorAll('.category-filter');
      const projectCards = document.querySelectorAll('.project-card');

      filterButtons.forEach(button => {
        button.addEventListener('click', (e) => {
          const target = e.currentTarget as HTMLElement;
          const category = target.getAttribute('data-category');
          
          // Update active button
          filterButtons.forEach(btn => {
            btn.classList.remove('bg-primary', 'text-primary-foreground', 'hover:bg-primary/90');
            btn.classList.add('bg-secondary', 'text-secondary-foreground', 'hover:bg-secondary/80');
          });
          target.classList.remove('bg-secondary', 'text-secondary-foreground', 'hover:bg-secondary/80');
          target.classList.add('bg-primary', 'text-primary-foreground', 'hover:bg-primary/90');

          // Filter projects
          projectCards.forEach(card => {
            const cardElement = card as HTMLElement;
            const cardCategory = cardElement.getAttribute('data-category');
            if (category === 'all' || cardCategory === category) {
              cardElement.style.display = 'block';
            } else {
              cardElement.style.display = 'none';
            }
          });
        });
      });
    });
  </script>
</Layout> 