---
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { Button } from '@/components/ui/button';

const title = 'Projects | Shay Henderson';
const description =
  'Explore web development projects: help center platforms reaching 60k+ users, technical documentation systems, and sites built with React and TypeScript.';

const projects = [
  {
    title: 'JPG Store Help Center',
    description:
      'Led creation and ongoing development of comprehensive help center with 150+ technical articles reaching 60,000+ readers annually. Integrated Intercom for AI-assisted support achieving 64.6% deflection rate and 90.2% customer satisfaction.',
    tech: [
      'Intercom',
      'Technical Writing',
      'AI Automation',
      'Customer Support',
      'Knowledge Management',
    ],
    github: null,
    live: 'https://help.jpg.store',
    category: 'Documentation',
    featured: true,
    image: '/jpg-store-help-center.png',
  },
  {
    title: 'SecurityBot Knowledge Hub',
    description:
      "Professional rework of SecurityBot's GitBook documentation, transforming it from a hobbyist reference into a structured, production-ready knowledge base with comprehensive product coverage.",
    tech: ['GitBook', 'Technical Writing', 'Documentation', 'QA Testing'],
    github: null,
    live: 'https://securitybot.gitbook.io/securitybot-knowledge-hub/',
    category: 'Documentation',
    featured: true,
    image: '/securitybot-knowledge-hub.png',
  },
  {
    title: 'Portfolio Website',
    description:
      'Modern, responsive portfolio built with Astro and Tailwind CSS. Features dark mode, smooth animations, and optimized performance.',
    tech: ['Astro', 'TypeScript', 'Tailwind CSS', 'Vercel'],
    github: 'https://github.com/HendoBuilds/shayhenderson-portfolio',
    live: 'https://www.shayhenderson.dev',
    category: 'Frontend',
    featured: true,
    image: "/shay-portfolio.webp"
  },
  {
    title: "FoxholeHub",
    description: "One-page community hub for live Foxhole war statistics and curated content. Aggregates real-time data from Foxhole War API, YouTube, Twitch, and Steam APIs with server-side caching via Upstash Redis.",
    tech: ["Astro", "TypeScript", "React", "Tailwind CSS", "Vercel", "Upstash Redis"],
    github: null,
    live: "https://www.foxholehub.com",
    category: "Web App",
    featured: true,
    image: "/foxholehub-og.png"
  }
];

const categories = [...new Set(projects.map((project) => project.category))];
---

<Layout title={title} description={description}>
  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'BreadcrumbList',
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: 'https://www.shayhenderson.dev',
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Projects',
          item: 'https://www.shayhenderson.dev/projects',
        },
      ],
    })}
  />

  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'ItemList',
      name: "Shay Henderson's Project Portfolio",
      description:
        'Collection of web development and technical documentation projects',
      numberOfItems: projects.length,
      itemListElement: projects.map((project, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        item: {
          '@type': 'CreativeWork',
          name: project.title,
          description: project.description,
          author: {
            '@type': 'Person',
            name: 'Shay Henderson',
            url: 'https://www.shayhenderson.dev',
          },
          url: project.live,
          keywords: project.tech.join(', '),
          genre: project.category,
          isAccessibleForFree: true,
          ...(project.github && { codeRepository: project.github }),
        },
      })),
    })}
  />

  <div class="container mx-auto max-w-6xl px-6 py-8">
    <div class="mb-12 text-center">
      <h1 class="mb-4 text-4xl font-bold text-foreground">
        Projects Portfolio
      </h1>
      <p class="mx-auto max-w-3xl text-xl text-muted-foreground">
        A collection of web development projects showcasing various
        technologies, from full-stack applications to automation tools and
        system utilities.
      </p>
    </div>

    <section class="mb-16">
      <h2 class="mb-8 border-b pb-2 text-2xl font-semibold text-foreground">
        Featured Projects
      </h2>
      <div class="grid grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-8">
        {
          projects
            .filter((p) => p.featured)
            .map((project) => (
              <div class="overflow-hidden rounded-xl border bg-card shadow-lg transition-all duration-300 hover:shadow-xl">
                {project.image ? (
                  <img
                    src={project.image}
                    alt={`Screenshot of ${project.title}`}
                    class="aspect-video w-full object-cover"
                    loading="lazy"
                  />
                ) : (
                  <div class="flex h-48 items-center justify-center bg-gradient-to-br from-muted to-muted-foreground/20">
                    <Icon
                      name="mdi:code-braces"
                      class="text-6xl text-primary-foreground"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="mb-3 flex items-center justify-between">
                    <h3 class="text-2xl font-semibold text-foreground">
                      {project.title}
                    </h3>
                    <span class="rounded-full bg-primary/10 px-3 py-1 text-sm text-primary">
                      {project.category}
                    </span>
                  </div>
                  <p class="mb-4 leading-relaxed text-muted-foreground">
                    {project.description}
                  </p>
                  <div class="mb-4 flex flex-wrap gap-2">
                    {project.tech.map((tech) => (
                      <span class="rounded bg-muted px-2 py-1 text-xs text-muted-foreground">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <div class="flex gap-3">
                    {project.live && (
                      <Button asChild>
                        <a
                          href={project.live}
                          target="_blank"
                          rel="noopener noreferrer"
                          aria-label={`Live demo for ${project.title}`}
                        >
                          <Icon name="mdi:open-in-new" class="mr-2 text-lg" />
                          Live Demo
                        </a>
                      </Button>
                    )}
                    {project.github && (
                      <Button variant="secondary" asChild>
                        <a
                          href={project.github}
                          target="_blank"
                          rel="noopener noreferrer"
                          aria-label={`View source code for ${project.title} on GitHub`}
                        >
                          <Icon name="mdi:github" class="mr-2 text-lg" />
                          GitHub
                        </a>
                      </Button>
                    )}
                  </div>
                </div>
              </div>
            ))
        }
      </div>
    </section>

    <section>
      <h2 class="mb-8 border-b pb-2 text-2xl font-semibold text-foreground">
        All Projects
      </h2>

      <div
        class="mb-8 flex flex-wrap gap-3"
        role="group"
        aria-label="Filter projects by category"
      >
        <Button
          className="category-filter"
          data-category="all"
          variant="default"
          aria-pressed="true">All Categories</Button
        >
        {
          categories.map((category) => (
            <Button
              className="category-filter"
              data-category={category.toLowerCase()}
              variant="secondary"
              aria-pressed="false"
            >
              {category}
            </Button>
          ))
        }
      </div>

      <div
        class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
        id="projects-grid"
      >
        {
          projects.map((project) => (
            <div
              class="project-card overflow-hidden rounded-lg border bg-card shadow-md transition-all duration-300 hover:shadow-lg"
              data-category={project.category.toLowerCase()}
            >
              {project.image ? (
                <img
                  src={project.image}
                  alt={`Screenshot of ${project.title}`}
                  class="aspect-video w-full object-cover"
                  loading="lazy"
                />
              ) : (
                <div class="flex h-32 items-center justify-center bg-gradient-to-br from-muted to-muted-foreground/20">
                  <Icon
                    name="mdi:code-braces"
                    class="text-4xl text-primary-foreground"
                  />
                </div>
              )}
              <div class="p-4">
                <div class="mb-2 flex items-center justify-between">
                  <h3 class="text-lg font-semibold text-foreground">
                    {project.title}
                  </h3>
                  <span class="rounded bg-primary/10 px-2 py-1 text-xs text-primary">
                    {project.category}
                  </span>
                </div>
                <p class="mb-3 text-sm text-muted-foreground">
                  {project.description}
                </p>
                <div class="mb-3 flex flex-wrap gap-1">
                  {project.tech.slice(0, 3).map((tech) => (
                    <span class="rounded bg-muted px-2 py-1 text-xs text-muted-foreground">
                      {tech}
                    </span>
                  ))}
                  {project.tech.length > 3 && (
                    <span class="rounded bg-muted px-2 py-1 text-xs text-muted-foreground">
                      +{project.tech.length - 3} more
                    </span>
                  )}
                </div>
                <div class="flex gap-2">
                  {project.live && (
                    <Button asChild size="sm" className="h-8">
                      <a
                        href={project.live}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label={`View demo of ${project.title}`}
                      >
                        <Icon name="mdi:open-in-new" class="mr-1 text-sm" />
                        Demo
                      </a>
                    </Button>
                  )}
                  {project.github && (
                    <Button
                      variant="secondary"
                      asChild
                      size="sm"
                      className="h-8"
                    >
                      <a
                        href={project.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        aria-label={`View ${project.title} code on GitHub`}
                      >
                        <Icon name="mdi:github" class="mr-1 text-sm" />
                        Code
                      </a>
                    </Button>
                  )}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section class="mt-16 rounded-xl bg-muted/50 p-8">
      <h2 class="mb-6 text-center text-2xl font-semibold text-foreground">
        Technologies & Skills
      </h2>
      <div
        class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-4 md:gap-6"
      >
        <div class="text-center">
          <h3 class="mb-2 font-medium text-foreground">Frontend</h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span class="rounded bg-primary/10 px-2 py-1 text-xs text-primary"
              >React</span
            >
            <span class="rounded bg-primary/10 px-2 py-1 text-xs text-primary"
              >Next.js</span
            >
            <span class="rounded bg-primary/10 px-2 py-1 text-xs text-primary"
              >Astro</span
            >
            <span class="rounded bg-primary/10 px-2 py-1 text-xs text-primary"
              >TypeScript</span
            >
          </div>
        </div>
        <div class="text-center">
          <h3 class="mb-2 font-medium text-foreground">
            Cloud & Infrastructure
          </h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >GCP</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Cloudflare</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Azure</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Vercel</span
            >
          </div>
        </div>
        <div class="text-center">
          <h3 class="mb-2 font-medium text-foreground">Tools & Platforms</h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Git/GitHub</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Intercom</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Linear</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >GitBook</span
            >
          </div>
        </div>
        <div class="text-center">
          <h3 class="mb-2 font-medium text-foreground">
            Scripting & Automation
          </h3>
          <div class="flex flex-wrap justify-center gap-2">
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >PowerShell</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Bash</span
            >
            <span
              class="rounded bg-accent px-2 py-1 text-xs text-accent-foreground"
              >Node.js</span
            >
          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const filterButtons = document.querySelectorAll('.category-filter');
      const projectCards = document.querySelectorAll('.project-card');

      filterButtons.forEach((button) => {
        button.addEventListener('click', (e) => {
          const target = e.currentTarget as HTMLElement;
          const category = target.getAttribute('data-category');

          // Update active button and aria-pressed state
          filterButtons.forEach((btn) => {
            btn.setAttribute('aria-pressed', 'false');
            btn.classList.remove(
              'bg-primary',
              'text-primary-foreground',
              'hover:bg-primary/90'
            );
            btn.classList.add(
              'bg-secondary',
              'text-secondary-foreground',
              'hover:bg-secondary/80'
            );
          });
          target.setAttribute('aria-pressed', 'true');
          target.classList.remove(
            'bg-secondary',
            'text-secondary-foreground',
            'hover:bg-secondary/80'
          );
          target.classList.add(
            'bg-primary',
            'text-primary-foreground',
            'hover:bg-primary/90'
          );

          // Filter projects
          projectCards.forEach((card) => {
            const cardElement = card as HTMLElement;
            const cardCategory = cardElement.getAttribute('data-category');
            if (category === 'all' || cardCategory === category) {
              cardElement.style.display = 'block';
            } else {
              cardElement.style.display = 'none';
            }
          });
        });
      });
    });
  </script>
</Layout>
