---
import Layout from '../layouts/Layout.astro';

const title = 'Privacy | Shay Henderson';
const description =
  'Privacy policy for shayhenderson.dev. Learn how this site protects your privacy with cookie-free analytics and no personal data collection.';
---

<Layout title={title} description={description}>
  <div class="container mx-auto max-w-4xl px-6 py-8">
    <h1 class="mb-8 text-4xl font-bold text-foreground">Privacy</h1>

    <div
      class="prose prose-neutral dark:prose-invert max-w-none space-y-6 text-muted-foreground"
    >
      <p>
        This site uses <a
          href="https://www.cloudflare.com/web-analytics/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:underline">Cloudflare Web Analytics</a
        > and <a
          href="https://vercel.com/docs/speed-insights"
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary hover:underline">Vercel Speed Insights</a
        > to understand how visitors use the site. Both services are privacy-friendly:
        they don't use cookies, don't track you across websites, and don't collect
        personal information.
      </p>

      <p>
        This site doesn't collect any personal data, require sign-ups, or use
        tracking cookies.
      </p>

      <p>
        Questions? Email <a
          href="mailto:contact@shayhenderson.dev"
          class="text-primary hover:underline">contact@shayhenderson.dev</a
        >.
      </p>

      <p class="text-sm">Last updated: November 2025</p>
    </div>
  </div>
</Layout>
